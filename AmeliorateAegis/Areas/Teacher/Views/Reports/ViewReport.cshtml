@model AmeliorateAegis.Models.ViewModels.ReportViewModel;

@{
    ViewData["Title"] = "View Report";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 offset-1">
            <div class="card" style="min-height: 100vh">
                <div class="card-body p-5">
                    <div class="row">
                        <div class="col-lg-6 col-sm-12">
                            <img src="~/img/Ameliorate.PNG" height="80" alt="Logo" />
                            <h4>Visionaries Center</h4>
                        </div>
                        <div class="col-lg-6 col-sm-12 text-lg-right">
                            <p>
                                123 Some Street<br />
                                Mount Croix<br />
                                Port Elizabeth<br />
                                6001
                            </p>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5>@Model.Pupil.FirstName @Model.Pupil.LastName</h5>
                        </div>
                        <div>
                            @if (Model.TotalAverage < 50)
                            {
                                <h5 class="text-danger">Total Average: @Model.TotalAverage</h5>
                            }
                            else
                            {
                                <h5 class="text-success">Total Average: @Model.TotalAverage</h5>
                            }

                        </div>
                    </div>

                    @if (Model.Pupil.Reports.Count > 0)
                    {
                        <div class="row mt-5">
                            <div class="col-lg-3 col-md-6 col-sm-12">
                                <h4 class="bg-light p-2">Term 1</h4>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        @foreach (var item in Model.Term1)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(model => item.Program.Name)</td>
                                                <td>@Html.DisplayFor(model => item.Mark)%</td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 col-sm-12">
                                <h4 class="bg-light p-2">Term 2</h4>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        @foreach (var item in Model.Term2)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(model => item.Program.Name)</td>
                                                <td>@Html.DisplayFor(model => item.Mark)%</td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 col-sm-12">
                                <h4 class="bg-light p-2">Term 3</h4>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        @foreach (var item in Model.Term3)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(model => item.Program.Name)</td>
                                                <td>@Html.DisplayFor(model => item.Mark)%</td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 col-sm-12">
                                <h4 class="bg-light p-2">Term 4</h4>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        @foreach (var item in Model.Term4)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(model => item.Program.Name)</td>
                                                <td>@Html.DisplayFor(model => item.Mark)%</td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row mt-5">
                            <div class="col-12 text-center">
                                <i class="fa fa-hourglass fa-5x text-primary"></i>
                                <h5>No Marks Recorded</h5>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
