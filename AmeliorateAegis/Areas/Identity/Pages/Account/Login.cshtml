@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<main id="main">

    <!-- ======= Intro Single ======= -->
    <section class="intro-single">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-8">
                    <div class="title-single-box">
                        <h1 class="title-single">Login</h1>
                        <span class="color-text-a"> </span>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Intro Single-->


    <section>
        <div class="row">
            <div class="card col-md-8 mx-auto p-4">
                <div class="title-section text-center">
                    <h4 class="title-single">Welcome Back</h4>
                    <p class="color-text-a">Please Login To Continue</p>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                    <div class="row">
                        <div class="col-md-6 mb-3 mx-auto">
                            <div class="form-group">
                                <input type="email" asp-for="Input.Email" name="email" class="form-control form-control-lg form-control-a" placeholder="Your Email" data-rule="email" data-msg="Please enter a valid email">
                                <div class="validate"></div>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row text-center">
                        <div class="col-md-6 mb-3 mx-auto">
                            <div class="form-group">
                                <input name="password" asp-for="Input.Password" type="password" class="form-control form-control-lg form-control-a" placeholder="Your Password" data-rule="text">
                                <div class="validate"></div>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 text-center">
                        <a id="forgot-password" asp-page="./ForgotPassword"> Forgot Password?</a><br />
                        <p>Don't have an account ? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Click here to register</a></p>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center">
                            @*<a class="btn btn-a" asp-area="Liason" asp-controller="Financial" asp-action="Index">Login</a>*@
                            <button type="submit" class="btn btn-a">Log in</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}