
@{
    ViewData["Title"] = "Add Programme";
}
@model AmeliorateAegis.Models.Programme
<div id="privacy" class="container-fluid text-center">
    <i class="fas fa-user-lock" style="font-size: 90px; color: darkorange;"></i>
    <h1 class="display-4 text-info text-center">
        Add Center Proggrammes
    </h1>
    <p class="text-info text-center" color: darkorange><i>Fill in the form below to add programes to the center.</i></p>
</div>
<hr />
<div class="border container" style="padding:30px;">
    <form asp-action="AddP">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <input asp-for="Id" class="form-control" hidden="hidden" />
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
            </div>
            <div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Description" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Description" class="form-control" />
            </div>
            <div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Centre" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Centre" class="form-control" />
            </div>
            <div>
                <span asp-validation-for="Centre" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row ">
            <div class="col-3">
                <label asp-for="CreationTime" class="control-label"></label>(Date added by)
            </div>
            <div class="col-6">
                <input type="datetime-local" name="CreationTime" value="CreationTime" />

            </div>
            <div>
                <span asp-validation-for="CreationTime" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row  ">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    Add Programme
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index1" asp-controller="Programmes" class="btn btn-success form-control">Back to List</a>

            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



