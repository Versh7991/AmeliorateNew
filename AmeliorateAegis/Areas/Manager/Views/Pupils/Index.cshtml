@model IEnumerable<AmeliorateAegis.Models.Pupil>


@{
    ViewData["Title"] = "Pupils";
}

<div class="container-fluid">
    <a asp-action="Add" asp-area="Manager" asp-controller="Pupils" class="btn btn-success form-control">Add Pupil</a>
</div>




<div class="formBorder">
    <p>
        <a asp-action="Add" asp-area="Manager" asp-controller="Pupils" class="btn btn-secondary btn-sm">Back</a>
    </p>

    <h3 style="background-color:Highlight" class="text-center">List Of Pupil </h3>
</div>

<br />

<table class="table table-condensed table-hover">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>DOB</th>
        <th>Parent</th>
        <th>Centre</th>
        <th>Teacher</th>
        <th>Creation Time/Date</th>
    </tr>


    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" style="color:red"></td>
            <bold>No Records Found</bold>
        </tr>
    }

    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParentId)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.CentreId)
                </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.TeacherId)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.CreationTime)
                 </td>
                 @*<td>
                     @Html.DisplayFor(modelItem => item.Parent)
                 </td>*@
                <td>
                    <partial name="_tableButtonPartial2" model="new ButtonPartialModel { ServiceID = ((int)item.Id) }" />
                </td>
            </tr>
        }}
</table>
<div class="form-group">
    <a class="btn btn-primary" asp-action="Home" asp-controller="Dashboard">Back </a>
</div>