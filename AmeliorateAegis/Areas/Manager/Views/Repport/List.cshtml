@model IEnumerable<AmeliorateAegis.Models.Pupil>

@{ ViewData["Title"] = "List Of Student"; }


<div class="formBorder">
    <p>
        <a asp-action="Index" asp-controller="Repport" class="btn btn-secondary btn-sm">Back</a>
    </p>

    <h3 style="background-color:Highlight" class="text-center">List Of Student  </h3>
</div>

<br />

<table class="table table-condensed table-hover">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>DOB</th>
        @*<th>ParentId</th>
        <th>CentreId</th>
        <th>TeacherId</th>
        <th>Creation Time/Date</th>*@
    </tr>


    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" style="color:red"></td>
            <bold>No Records Found</bold>
        </tr>
    }

    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoB)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.CentreId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.ParentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.TeacherId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationTime)
                </td>*@
                <td>
                    <partial name="_tableButtonPartial2" model="new ButtonPartialModel { ServiceID = ((int)item.Id) }" />
                </td>
            </tr>
        }}
</table>
<div class="form-group">
    <a class="btn btn-primary" asp-action="Index1" asp-controller="Programmes">View List </a>
    <a class="btn btn-primary" asp-action="AddP" asp-controller="Programmes">New </a>
</div>