@model MailModel

<fieldset>
    <legend>
        Send Email
    </legend>

    @if (ViewBag.msg != null)
    {
        <div class="alert alert-success">@ViewBag.msg</div>
    }

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <p>From: </p>
        <p>@Html.TextBoxFor(m => m.From)</p>
        <p>To: </p>
        <p>@Html.TextBoxFor(m => m.To)</p>
        <p>Subject: </p>
        <p>@Html.TextBoxFor(m => m.Subject)</p>
        <p>Body: </p>
        <p>@Html.TextAreaFor(m => m.Body)</p>
        <input type="submit" value="Send" />

        <a asp-action="RegionalManager" asp-controller="Regionals" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i> Back to List</a>

    }
</fieldset>
