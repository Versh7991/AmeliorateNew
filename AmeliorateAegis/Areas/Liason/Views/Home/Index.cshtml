@{
    ViewData["Title"] = "Home Page";
}


<div id="services" class="container-fluid text-center">
    <i class="fa fa-home" style="font-size: 90px; color: darkorange;"></i>
    <h1 class="display-4 text-warning text-center" ; style="color: #ffa500;">
        Welcome to the provincial Page
    </h1>
    <p class="text-warning text-center" ; style="color: #ffa500;"><i> Managing the lower level of the hierarchy</i></p>
</div>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 ">

        <div class="container">

            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                <ul class="navbar-nav flex-grow-1">
                
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Regionals" style="color:darkorange;" asp-action="RegionalManager">| Manage Regional Coordinator</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Reporting" style="color:darkorange;" asp-action="Index">| Generate Reports</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Profile" style="color:darkorange;" asp-action="New">| Update Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Financial" style="color:darkorange;" asp-action="FinancialTable">| Allocate Finances</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
@*<div><img src="~/images/ethiopia-campus-daycare.jpg" class="container-fluid text-center"/></div>*@

<div class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="~/images/images.png" width="100%" height="225" xmlns="">
                    <div class="card-body">
                        <p class="card-text"></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Meetings" asp-action="Create" class="btn btn-outline-secondary">MEETINGS</a>
                            </div>
                            <small class="text-muted">wait</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="~/images/Lego_Carousel.jpg"  width="100%" height="225" xmlns="">
                    <div class="card-body">
                        <p class="card-text"></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a class="btn btn-outline-secondary disabled">PROGRAMMES</a>
                            </div>
                            <small class="text-muted">wait</small>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="~/images/ethiopia-campus-daycare.jpg"  width="100%" height="225" xmlns="">
                    <div class="card-body">
                        <p class="card-text"></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a class="btn btn-outline-secondary disabled" >CENTERS</a>
                            </div>
                            <small class="text-muted">wait</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



