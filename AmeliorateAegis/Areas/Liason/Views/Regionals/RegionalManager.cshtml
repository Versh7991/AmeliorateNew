@model IEnumerable<AmeliorateAegis.Models.Regional>

@{
    ViewData["Title"] = "Coordinators";
}

<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Regional Coordinator List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Insert" asp-controller="Regionals" class="btn btn-info form-control text-white">Add regional coordinator</a>
    </div>


    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Assigned Password</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var regional in Model)
                {
                    <tr>
                        <td>@regional.FirstName</td>
                        <td>@regional.LastName</td>
                        <td>@regional.Email</td>
                        <td>@regional.Password</td>
                    </tr>
                }
            </tbody>
        </table>

        <a asp-action="SendEmail" asp-controller="Email" class="btn btn-info form-control text-white">Email Credentials</a>
     
    </div>
</div>

