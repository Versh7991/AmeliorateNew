@model AmeliorateAegis.Models.Meeting


<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info"> Meeting Details</h2>
        </div>

        <div class="col-3 offset-3">
            <a asp-action="Index" asp-controller="Meetings" class="btn btn-info form-control text-white">View Meetings</a>
        </div>
        </div>
        <div>

            <hr />
            <br />
            <div class="row">
                <div class="col-md-4 col">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-border">

                            <div class="form-group">
                                <label asp-for="Date"></label>
                                <div> <input asp-for="Date" class="form-control" /></div>
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="Time"></label>
                                <div><input asp-for="Time" class="form-control" /></div>
                                <span asp-validation-for="Time" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Reason"></label>
                            <div>
                                <select asp-for="Reason" asp-items="ViewBag.Reason" class="form-control">
                                    <option value="" class="text-center">-- Select Reason for consultation --</option>
                                    <option>Meeting with Centre Manager</option>
                                    <option>Meeting with ECD Center</option>
                                    <option>Meeting with Regional Coordinator</option>
                                    <option>Other</option>
                                </select>
                            </div>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>

                        <br />

                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Create" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
