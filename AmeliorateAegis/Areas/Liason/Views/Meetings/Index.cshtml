@model IEnumerable<AmeliorateAegis.Models.Meeting>

@{
    ViewData["Title"] = "Meetings";

}


<div class="formBorder">
    <p>
        <a asp-action="Create" asp-controller="Meetings" class="btn btn-secondary btn-sm">Back</a>
    </p>

    <h3 style="background-color:Highlight" class="text-center">Scheduled Appointments </h3>
</div>

<br />

<table class="table table-condensed table-hover">
    <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Reason for Consultation</th>
    </tr>


    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" style="color:red"></td>
            <bold>No Records Found</bold>
        </tr>
    }

    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reason)
                </td>
                <td>
                    <partial name="_tableButtonPartial2" model="new ButtonPartialModel { ServiceID = item.MeetingID }" />
                </td>
            </tr>

        }
    }
</table>
<div class="form-group">
    <a class="btn btn-primary" asp-action="SendEmail" asp-controller="Email">Send Email</a>
</div>