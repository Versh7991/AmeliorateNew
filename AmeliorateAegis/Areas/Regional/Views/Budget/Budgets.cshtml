
@model IEnumerable<BudgetDTO>

@{
    ViewData["Title"] = "Budget";
}
<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Budget List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-area="Regional" asp-action="AddBudget" asp-controller="Budget" class="btn btn-info form-control text-white">Create Budget</a>


    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Budget Description</th>
                    <th>Date</th>
                    @*<th>Regional ID</th>*@
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var budget in Model)
                {

                    <tr>
                        <td>@budget.BudgetDescr</td>
                        <td>@budget.Date</td>
                        <td>@budget.BudgetID</td>
                        <td>
                            @*<a asp-controller="Budget" asp-action="AddBudget" class="btn btn-info form-control text-white">View</a>*@
                            <a asp-controller="Report" asp-action="DownloadBudgetReport" asp-route-BudgetID="@budget.BudgetID" class="text-primary"><i class="material-icons">description</i></a>
                            <a href="javascript:deleteBudget(@budget.BudgetID);" class="text-danger"> <i class="material-icons">delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>