
@model CenterDTO

<div class="row">
    <div class="col-sm-2">
        <a asp-controller="Center" asp-action="Centers" class="btn btn-primary">CANCEL</a>
    </div>
</div>

<div class="container" style="padding:30px;">
    <div class="section-title">
        <h2>Add Center</h2>
    </div>

    <form method="post">
        @*@if (Model.RegionalId != 0)
            {
                <Input type="hidden" asp-for="RegionalId" />
            }*@
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-sm-6">
                <div class="cold-6">
                    <div>
                        <label asp-for="CenterCode"> Center Code</label>
                    </div>
                    <input asp-for="CenterCode" class="form-control" />
                    <span asp-validation-for="CenterCode" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="cold-6">
                    <div>
                        <label asp-for="CenterName">Center Name</label>
                    </div>
                    <input asp-for="CenterName" class="form-control" />
                    <span asp-validation-for="CenterName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-12">
                <div class="cold-6">
                    <div>
                        <label asp-for="Addressline1">Addressline 1</label>
                    </div>
                    <input asp-for="Addressline1" class="form-control" />
                    <span asp-validation-for="Addressline1" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-12">
                <div class="cold-6">
                    <div>
                        <label asp-for="Addressline2">Addressline 2</label>
                    </div>
                    <input asp-for="Addressline2" class="form-control" />
                    <span asp-validation-for="Addressline2" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-12">
                <div class="cold-6">
                    <div>
                        <label asp-for="Suburb">Suburb</label>
                    </div>
                    <input asp-for="Suburb" class="form-control" />
                    <span asp-validation-for="Suburb" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-12">
                <div class="cold-6">
                    <div>
                        <label asp-for="City">City</label>
                    </div>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-12">
                <div class="cold-6">
                    <div>
                        <label asp-for="Province">Province</label>
                        <span asp-validation-for="Province" class="text-danger"></span>

                    </div>
                    <select class="form-control" asp-for="Province">

                        <option selected>-Please select a province-</option>
                        <option value="Eastern Cape">Eastern Cape</option>
                        <option value="Free State">Free State</option>
                        <option value="Gauteng">Gauteng</option>
                        <option value="KwaZulu-Nata">KwaZulu-Natal</option>
                        <option value="Limpopo">Limpopo</option>
                        <option value="Mpumalang">Mpumalanga</option>
                        <option value="Northen Cape">Northen Cape</option>
                        <option value="North West">North West</option>
                        <option value="Western Cape">Western Cape</option>
                    </select>
                    <!--<input asp-for="Province" class="form-control" />
                    <span asp-validation-for="Province" class="text-danger"></span>
                        -->
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-2">
                <a asp-controller="Center" asp-action="Centers" class="btn btn-success form-control">VIEW LIST</a>
            </div>


            <div class="col-sm-2 align-content-end">
                <button type="submit" class="btn btn-primary text-capitalize" form-control>
                    ADD CENTER
                </button>
            </div>



        </div>


    </form>
</div>

<partial name="_ValidationScriptsPartial" />

