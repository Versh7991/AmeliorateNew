
@model CenterDTO


<div class="container" style="padding:30px;">
    <div class="section-title">
        <h2>Update Center</h2>
    </div>

    <div class="row">
        <div class="col-sm-2">
            <a asp-controller="Center" asp-action="Centers" class="btn btn-primary">CANCEL</a>
        </div>
    </div>

    <form method="post">
        @*@if (Model.RegionalId != 0)
            {
                <Input type="hidden" asp-for="RegionalId" />
            }*@

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="col-sm-6">
            <div class="cold-6">
                <div>
                    <label asp-for="CenterCode"> Center Code</label>
                </div>
                <input asp-for="CenterCode" value="@Model.CenterCode" class="form-control" />
                <input asp-for="CenterID" type="hidden" value="@Model.CenterID" />
                <span asp-validation-for="CenterCode" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="cold-6">
                <div>
                    <label asp-for="CenterName">Center Name</label>
                </div>
                <input asp-for="CenterName" value="@Model.CenterName" class="form-control" />
                <span asp-validation-for="CenterName" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-12">
                <div class="cold-6">
                    <div>
                        <label asp-for="Addressline1">Addressline 1</label>
                    </div>
                    <input asp-for="Addressline1" value="@Model.Addressline1" class="form-control" />
                    <span asp-validation-for="Addressline1" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-12">
                <div class="cold-6">
                    <div>
                        <label asp-for="Addressline2">Addressline 2</label>
                    </div>
                    <input asp-for="Addressline2" value="@Model.Addressline2" class="form-control" />
                    <span asp-validation-for="Addressline2" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-12">
                <div class="cold-6">
                    <div>
                        <label asp-for="Suburb">Suburb</label>
                    </div>
                    <input asp-for="Suburb" value="@Model.Suburb" class="form-control" />
                    <span asp-validation-for="Suburb" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-12">
                <div class="cold-6">
                    <div>
                        <label asp-for="City">City</label>
                    </div>
                    <input asp-for="City" value="@Model.City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-12">
                <div class="cold-6">
                    <div>
                        <label asp-for="Province">Province</label>
                    </div>
                    <select class="form-control" asp-for="Province">
                        <option selected>-Please select a province-</option>
                        @if (Model.Province == "Free State")
                        {
                            <option value="Free State" selected>Free State</option>
                        }
                        else
                        {
                            <option value="Free State">Free State</option>
                        }

                        @if (Model.Province == "Gauteng")
                        {
                            <option value="Gauteng" selected>Gauteng</option>
                        }
                        else
                        {
                            <option value="Gauteng">Gauteng</option>
                        }


                        @if (Model.Province == "KwaZulu-Natal")
                        {
                            <option value="KwaZulu-Natal" selected>KwaZulu-Natal</option>
                        }
                        else
                        {
                            <option value="KwaZulu-Natal">KwaZulu-Natal</option>
                        }


                        @if (Model.Province == "Limpopo")
                        {
                            <option value="Limpopo" selected>Limpopo</option>
                        }
                        else
                        {
                            <option value="Limpopo">Limpopo</option>
                        }


                        @if (Model.Province == "Mpumalanga")
                        {
                            <option value="Mpumalanga" selected>Mpumalanga</option>
                        }
                        else
                        {
                            <option value="Mpumalanga">Mpumalanga</option>
                        }

                        @if (Model.Province == "Northen Cape")
                        {
                            <option value="Northen Cape" selected>Northen Cape</option>
                        }
                        else
                        {
                            <option value="Northen Cape">Northen Cape</option>
                        }

                        @if (Model.Province == "North West")
                        {
                            <option value="North West" selected>North West</option>
                        }
                        else
                        {
                            <option value="North West">North West</option>
                        }

                        @if (Model.Province == "Western Cape")
                        {
                            <option value="Western Cape" selected>Western Cap</option>
                        }
                        else
                        {
                            <option value="Western Cape">Western Cape</option>
                        }

                    </select>

                </div>
            </div>
        </div>

        <!-- Removed this button because i added a "cancel" button-->

        <div class="row">
            <div class="col-sm-2">
                <a asp-controller="Center" asp-action="Centers" class="btn btn-success form-control">BACK TO LIST</a>
            </div>

            <div class="col-sm-2 align-content-end">
                <button type="submit" class="btn btn-primary text-capitalize" form-control>
                    UPDATE CENTER
                </button>

            </div>

        </div>
    </form>
</div>

<partial name="_ValidationScriptsPartial" />

