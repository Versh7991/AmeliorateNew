@model VisitorDTO

<div class="row">
    <div class="col-sm-2">
        <a asp-controller="Visitor" asp-action="Visitors" class="btn btn-primary">CANCEL</a>
    </div>
</div>

<div class="container" style="padding:30px;">
    <div class="section-title">
        <h2>Add Visit</h2>
    </div>

    <form method="post">
        @*@if (Model.RegionalId != 0)
            {
                <Input type="hidden" asp-for="RegionalId" />
            }*@
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-sm-6">
                <div class="cold-6">
                    <div>
                        <label asp-for="VisitDescr"> Visit Description</label>
                    </div>
                    <input asp-for="VisitDescr" class="form-control" />
                    <span asp-validation-for="VisitDescr" class="text-danger"></span>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="cold-6">
                    <div>
                        <label asp-for="Date">Date and Time</label>
                    </div>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- <div class="form-group row">
            <div class="col-sm-12">
                <div class="cold-6">
                    <div>
                        <label asp-for="Time">Time</label>
                    </div>
                    <input asp-for="Time" id="datetime" class="form-control" />
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>
            </div>
        </div> -->

        <div class="form-group row">
            <div class="col-sm-12">
                <div class="cold-6">
                    <div>
                        <label asp-for="Duration">Duration</label>
                    </div>
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-12">
                <div class="cold-6">
                    <div>
                        <label asp-for="ReasonForVisit">Reason For Visit</label>
                    </div>
                    <input asp-for="ReasonForVisit" class="form-control" />
                    <span asp-validation-for="ReasonForVisit" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-sm-2">
                <a asp-controller="Visitor" asp-action="Visitors" class="btn btn-success form-control">VIEW LIST</a>
            </div>

            <div class="col-sm-2 align-content-end">
                <button type="submit" class="btn btn-primary text-capitalize" form-control>
                    ADD VISIT
                </button>
            </div>



        </div>


    </form>
</div>
<script>


    $('#datetime').datetimepicker({
        format: 'hh:mm:ss a'
    });
</script>


<partial name="_ValidationScriptsPartial" />

