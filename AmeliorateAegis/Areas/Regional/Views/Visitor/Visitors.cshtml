
@model IEnumerable<VisitorDTO>

@{
    ViewData["Title"] = "Scheduled Visits";
}

<script src="~/RegionalJS/Visitor/VisitorListAppController.js" asp-append-version="true"></script>

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Scheduled Visit List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-area="Regional" asp-action="AddVisitor" asp-controller="Visitor" class="btn btn-info form-control text-white">Add Visit</a>
    </div>


    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Visit Description</th>
                    <th>Date and Time</th>
                    <!-- th>Time</!--th> -->
                    <th>Duration</th>
                    <th>Reason For Visit</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var visit in Model)
                {
                    <tr>
                        @*<td>@visit.ScheduleVisitID</td>*@
                        <td>@visit.VisitDescr</td>
                        <td>@visit.Date</td>
                        <!-- <td>visit.Time</td> -->
                        <td>@visit.Duration</td>
                        <td>@visit.ReasonForVisit</td>
                        <td>
                            <a asp-controller="Visitor" asp-action="UpdateVisitor" asp-route-ScheduleVisitID="@visit.ScheduleVisitID" class="material-icons">edit</a>
                            <a asp-controller="Report" asp-action="DownloadVisitorReport" asp-route-ScheduleVisitID="@visit.ScheduleVisitID" class="text-primary"><i class="material-icons">description</i></a>
                            <a href="javascript:deleteVisitor(@visit.ScheduleVisitID);" class="text-danger"> <i class="material-icons">delete</i></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>


    $('#datetime').datetimepicker({
        format: 'hh:mm:ss a'
    });
</script>
